cd /home/indara_safe/indara
./start_server.sh

# Download latest ngrok
wget https://bin.equinox.io/c/bNyj1mQVY4c/ngrok-stable-linux-amd64.zip

# Unzip
unzip ngrok-stable-linux-amd64.zip

# Move it to /usr/local/bin so it's globally available
sudo mv ngrok /usr/local/bin/

# Make sure it runs
ngrok version

ngrok http 7860

/home/audiocraft/start_local.sh

# 1) load conda
source /root/miniconda3/etc/profile.d/conda.sh

# 2) (optional) confirm the YAML exists
ls -l /home/audiocraft/acraft310.env.yml

# 3) recreate the env from your saved recipe
conda env create -f /home/audiocraft/acraft310.env.yml

# 4) activate and run
conda activate acraft310
export PYTHONPATH="/home/audiocraft:${PYTHONPATH:-}"
python /home/audiocraft/load_and_generate.py
